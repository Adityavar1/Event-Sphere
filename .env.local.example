# Local Development Environment Variables
# Copy this file to .env for local development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/eventsphere_dev
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=eventsphere_dev

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-for-local-development

# Development Configuration
NODE_ENV=development
PORT=5000

# Local Development Auth (bypass Replit auth)
REPL_ID=local-dev
REPLIT_DOMAINS=localhost:5000,127.0.0.1:5000
ISSUER_URL=https://replit.com/oidc